{
  "private": true,
  "name": "oice",
  "productName": "oice",
  "version": "0.0.0",
  "description": "omamori-voice",
  "author": {
    "name": "ke_tachibana",
    "email": "deadzone@be.to"
  },
  "electronVersion": "0.36.0",
  "watch": {
    "build:grammar": {
      "patterns": "grammar/charm.{yomi,grammar}",
      "extensions": "yomi,grammar"
    }
  },
  "scripts": {
    "test": "xo",
    "start": "docker run -ti -p 443:443 oice",
    "build:grammar": "cd grammar; ./build.sh",
    "build:docker": "docker build -t oice .",
    "build": "npm run build:grammar; webpack; npm run build:docker",
    "start-dev": "npm run watch & bundle exec thin --ssl -p 4430 start",
    "watch": "npm-watch & webpack -w"
  },
  "main": "main/index.js",
  "files": [
    "main",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "classnames": "^2.2.3",
    "electron-debug": "^0.5.0",
    "raw-loader": "^0.5.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "superagent": "^1.8.0-beta.2"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "electron-packager": "^5.0.0",
    "electron-prebuilt": "^0.36.0",
    "npm-watch": "^0.1.1",
    "recorderjs": "git+https://github.com/mattdiamond/Recorderjs.git",
    "webpack": "^1.12.13",
    "xo": "^0.12.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
